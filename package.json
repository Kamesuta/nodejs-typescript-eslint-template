{
  "name": "nodejs-typescript-eslint-template",
  "version": "1.0.0",
  "description": "Robust TypeScript Template with eslint for Node.js",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node --import tsx/esm src/index.ts",
    "clean": "rimraf dist",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "lint": "tsc --noEmit && eslint src test --ext .ts",
    "lint:fix": "tsc --noEmit && eslint src test --ext .ts --fix",
    "prettier": "prettier --write",
    "lint-staged": "lint-staged",
    "prepare": "if-env NODE_ENV=production && echo 'Skipping husky in production' || husky"
  },
  "author": "Kamesuta",
  "license": "MIT",
  "engines": {
    "node": "22.x"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.14.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsdoc": "^50.6.9",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "dependencies": {
    "if-env": "^1.0.4",
    "log4js": "^6.9.1",
    "toml": "^3.0.0",
    "tsx": "^4.19.3"
  }
}
